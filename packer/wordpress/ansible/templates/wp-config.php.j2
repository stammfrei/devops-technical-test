 */
define( "AUTH_KEY",         getenv_default("WP_AUTH_KEY", "") );
define( "SECURE_AUTH_KEY",  getenv_default("WP_SECURE_AUTH_KEY", "") );
define( "LOGGED_IN_KEY",    getenv_default("WP_LOGGED_IN_KEY", "") );
define( "NONCE_KEY",        getenv_default("WP_NONCE_KEY", "") );
define( "AUTH_SALT",        getenv_default("WP_AUTH_SALT", "") );
define( "SECURE_AUTH_SALT", getenv_default("WP_SECURE_AUTH_SALT", "") );
define( "LOGGED_IN_SALT",   getenv_default("WP_LOGGED_IN_SALT", "") );
define( "NONCE_SALT",       getenv_default("WP_NONCE_SALT", "") );

/**#@-*/

/**
 * WordPress database table prefix.
 *
 * You can have multiple installations in one database if you give each
 * a unique prefix. Only numbers, letters, and underscores please!
 */
$table_prefix = getenv_default("WP_TABLE_PREFIX", "wp_");

/*
 * WP folder settings
 * */
define( "WP_CONTENT_DIR", dirname(__FILE__) . getenv_default("WP_CONTENT_PATH", "/wp-content") );
define( "WP_PLUGIN_DIR", dirname(__FILE__) . getenv_default("WP_PLUGIN_PATH", "/wp-content/plugins") );
define( "UPLOADS", getenv_default("WP_UPLOADS_PATH", "/wp-uploads") );
define( "WP_POST_REVISIONS", getenv_default("WP_POST_REVISIONS", "true") );

/* That"s all, stop editing! Happy publishing. */

/** Absolute path to the WordPress directory. */
if ( ! defined( "ABSPATH" ) ) {
        define( "ABSPATH", __DIR__ . "/" );
}

/** Sets up WordPress vars and included files. */
require_once ABSPATH . "wp-settings.php";
